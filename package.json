{
  "name": "apollo-logger",
  "version": "0.3.1",
  "description": "Apollo GraphQL Logger",
  "main": "./lib/bundle.umd.js",
  "module": "./lib/index.js",
  "jsnext:main": "./lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib/*",
    "build:browser": "browserify ./lib/bundle.umd.js -o=./lib/bundle.js && npm run minify:browser",
    "bundle": "rollup -c",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -p tsconfig.json --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "minify:browser": "uglifyjs -c -m -o ./lib/bundle.min.js -- ./lib/bundle.js",
    "postbuild": "npm run bundle",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sysgears/apollo-logger.git"
  },
  "keywords": [
    "apollo",
    "graphql",
    "log"
  ],
  "author": "Victor Vlasenko <victor.vlasenko@sysgears.com> (https://github.com/sysgears)",
  "license": "MIT",
  "files": [
    "lib",
    "src",
    "LICENSE",
    "README.md"
  ],
  "bugs": {
    "url": "https://github.com/sysgears/apollo-logger/issues"
  },
  "homepage": "https://github.com/sysgears/apollo-logger",
  "devDependencies": {
    "@types/node": "^7.0.18",
    "@types/zen-observable": "^0.8.0",
    "apollo-link": "^1.2.11",
    "graphql": "^14.2.0",
    "graphql-subscriptions": "^1.0.0",
    "husky": "^1.3.1",
    "iterall": "^1.2.2",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.7.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.3"
  },
  "peerDependencies": {
    "apollo-link": "*",
    "graphql-subscriptions": "*",
    "graphql": "*",
    "iterall": "*"
  },
  "dependencies": {
    "debug": "^3.0.1"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ],
    "*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "babel"
  }
}
