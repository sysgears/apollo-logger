{
  "name": "apollo-logger",
  "version": "0.2.0",
  "description": "Apollo GraphQL Logger",
  "main": "./lib/bundle.umd.js",
  "module": "./lib/index.js",
  "jsnext:main": "./lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib/*",
    "build:browser": "browserify ./lib/bundle.umd.js -o=./lib/bundle.js && npm run minify:browser",
    "bundle": "rollup -c",
    "build": "tsc -p .",
    "watch": "tsc -w",
    "lint": "tslint --fix 'src/*.ts*' -p tsconfig.json --type-check && tslint 'test/*.ts*' -p tsconfig.json --type-check",
    "test": "echo \"Error: no test specified\" && exit 1",
    "minify:browser": "uglifyjs -c -m -o ./lib/bundle.min.js -- ./lib/bundle.js",
    "postbuild": "npm run bundle",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sysgears/apollo-logger.git"
  },
  "keywords": [
    "apollo",
    "graphql",
    "log"
  ],
  "author": "Victor Vlasenko <victor.vlasenko@sysgears.com> (https://github.com/sysgears)",
  "license": "MIT",
  "files": [
    "lib",
    "src",
    "LICENSE",
    "README.md"
  ],
  "bugs": {
    "url": "https://github.com/sysgears/apollo-logger/issues"
  },
  "homepage": "https://github.com/sysgears/apollo-logger",
  "devDependencies": {
    "@types/node": "^7.0.18",
    "@types/zen-observable": "^0.5.3",
    "apollo-link": "^1.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.1.3",
    "prettier": "^1.6.1",
    "graphql": "^0.11.7",
    "rimraf": "^2.6.2",
    "rollup": "^0.50.0",
    "tslint": "^5.2.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.3.2"
  },
  "peerDependencies": {
    "apollo-link": ">= 0.5.0",
    "graphql": ">= 0.10.0"
  },
  "dependencies": {
    "debug": "^3.0.1"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ],
    "*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "babylon"
  }
}
